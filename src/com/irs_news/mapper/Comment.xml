<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.irs_news.mapper.CommentMapper">

	    <select id="get_comments" parameterType="map" resultType="Comment">
	        select * from   comments where news__id = #{news_id} and emotion = #{emotion}     
	    </select>
	    
	   	<select id="count_comments" parameterType="map" resultType="_int">
	        select count(*) from   comments where news__id = #{news_id} and emotion = #{emotion}     
	    </select>
	    	    
	</mapper>