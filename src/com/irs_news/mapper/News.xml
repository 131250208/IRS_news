<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.irs_news.mapper.NewsMapper">
	    <insert id="add" parameterType="News" >
	        insert into news_ ( name ) values (#{title}, #{abstract_})    
	    </insert>
	    
	    <delete id="delete" parameterType="News" >
	        delete from news_ where id= #{id}   
	    </delete>
	    
	    <select id="get" parameterType="_int" resultType="News">
	        select * from   news_  where id= #{id}    
	    </select>

	    <update id="update" parameterType="News" >
	        update news_ set name=#{title} where id=#{id}    
	    </update>
	    <select id="search" resultType="News">
	        select * from   news_      
	    </select>	    
	</mapper>
